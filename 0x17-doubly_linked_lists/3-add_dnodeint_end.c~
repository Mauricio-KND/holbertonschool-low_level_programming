#include "lists.h"

/**
 * add_dnodeint_end - adds a new node to the end of a dlink list
 * @head: pointer to the head of a dlink list
 * @n: data for the new node
 * Return: pointer to the newly created node
 */
dlistint_t *add_dnodeint_end(dlistint_t **head, const int n)
{
	dlistint_t *new = NULL, *ptr = NULL;

	if (!head)
		return (NULL);
	for (ptr = *head; ptr && ptr->next; ptr = ptr->next)
		;
	new = malloc(sizeof(dlistint_t));
	if (!new)
		return (NULL);
	new->n = n;
	new->prev = ptr;
	new->next = NULL;
	if (!*head)
		*head = new;
	else
		ptr->next = new;
	return (new);
}
